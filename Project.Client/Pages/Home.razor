@page "/"

@inject HttpClient Http

<PageTitle>Home</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium" Class="py-4">
    <Post ShowPlus="true"/>
    <Post ShowPlus="true"/>
    <Post ShowPlus="true"/>
    <Post ShowPlus="true"/>
</MudContainer>

@if (_posts == null)
{
    <MudText>Loading posts</MudText>
}
else
{
    if (_posts.Count == 0)
    {
        <MudText>No posts, add some maybe?</MudText>
    }
    else
    {
        foreach (var postDto in _posts)
        {
            <Post PostDto="postDto"/>
        }
    }
}

@code {
    private List<PostDto>? _posts = null;

    protected override async Task OnInitializedAsync()
    {
        // _posts = await Http.GetFromJsonAsync<List<PostDto>>("X") ?? [];
        _posts = [];
    }

}
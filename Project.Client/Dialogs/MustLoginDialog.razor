<MudDialog>
    <DialogContent>
        <MudText>You must login to @Action</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Default" OnClick="() => MudDialog.Close(DialogResult.Cancel)">Cancel</MudButton>
        <MudButton Color="Color.Success" OnClick="() => MudDialog.Close(DialogResult.Ok(true))">Login</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    public MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public string Action { get; set; }
}
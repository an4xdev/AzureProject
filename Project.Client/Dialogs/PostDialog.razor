<MudDialog>
    <DialogContent>
        <div class="d-flex">
            <div>
                <Post ShowMore="ShowMore" PostDto="PostDto"/>
            </div>
            <div>
                <div class="comments-container">
                    @foreach (var comment in PostDto.Comments)
                    {
                        <Comment CommentDto="comment"/>
                    }
                </div>
            </div>
        </div>

    </DialogContent>
</MudDialog>

@code {
    [CascadingParameter] private MudDialogInstance MudDialog { get; set; }

    [Parameter] public PostDto PostDto { get; set; }
    [Parameter] public bool ShowMore { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
        PostDto.Comments.ForEach(c => Console.WriteLine($"{c.User.UserName}: {c.Value} at: {c.Time}"));
    }

}